# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_CHAT_MODEL=gpt-4o-mini

# Qdrant Cloud Configuration
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key-here
QDRANT_COLLECTION_NAME=textbook_embeddings

# Neon Postgres Configuration
DATABASE_URL=postgresql+asyncpg://user:password@host/database

# CORS Configuration
# Add ALL domains that will access this API
# Development + Production
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://psqasim.github.io

# Application Limits
MAX_QUESTION_TOKENS=500
MAX_SELECTION_TOKENS=500
CHUNK_RETRIEVAL_LIMIT=10

# Logging
LOG_LEVEL=INFO

# Multilingual Support Configuration
DEFAULT_LANGUAGE=en
# Supported languages: en (English), ur (Urdu), ja (Japanese)
# Language detection confidence threshold: 0.5 (50%)
